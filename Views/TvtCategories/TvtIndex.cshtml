@model IEnumerable<TvtK22CNTLesson11_2210900063.Models.TvtCategory>

@{
    ViewBag.Title = "danh mục sản phẩm ";
    Layout = "~/Views/Shared/Tvt2210900063_Layout.cshtml";
}

<h2>danh mục sản phẩm </h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<a href="/TvtCategories/Create" class="btn btn-primary my-3">thêm mới </a>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TvtID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TvtCateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TvtStatus)
        </th>
