            }
            else
            {
                <span style="color:red">không hoạt động </span>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TvtID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TvtID }) |
